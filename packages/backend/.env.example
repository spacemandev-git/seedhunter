# Server
PORT=3000
HOST=0.0.0.0

# Database - PostgreSQL
# Local dev: docker run --name seedhunter-db -e POSTGRES_PASSWORD=postgres -e POSTGRES_DB=seedhunter -p 5432:5432 -d postgres
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/seedhunter?schema=public"

# For Railway: DATABASE_URL will be set automatically when you add PostgreSQL service

# JWT Secrets
JWT_SECRET=change-me-to-a-secure-random-string
JWT_EXPIRES_IN=7d
ADMIN_JWT_EXPIRES_IN=24h

# X OAuth (Twitter API v2)
X_CLIENT_ID=your-x-client-id
X_CLIENT_SECRET=your-x-client-secret

# Development:
# X_CALLBACK_URL=http://localhost:3000/auth/x/callback
# FRONTEND_URL=http://localhost:5173

# Production:
X_CALLBACK_URL=https://seedhunterapi.seedplex.io/auth/x/callback
FRONTEND_URL=https://seedhunter.seedplex.io

# Optional Features
ENABLE_CHAT=true
ENABLE_PLAYER_LOCATION=false

# Admin accounts (for initial seeding)
# Option 1: Single admin
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-me-to-secure-password

# Option 2: Multiple admins (comma-separated)
# ADMIN_ACCOUNTS=admin:securepass1,moderator:securepass2,staff:securepass3

# Option 3: Multiple admins (JSON format)
# ADMIN_ACCOUNTS=[{"username":"admin","password":"securepass1"},{"username":"moderator","password":"securepass2"}]

# Note: Additional admins can be created via API after deployment:
# POST /admin/accounts { "username": "newadmin", "password": "securepass" }
# (Requires existing admin authentication)
