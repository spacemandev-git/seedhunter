{
  "name": "@seedhunter/backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "start": "bun run dist/index.js",
    "typecheck": "tsc --noEmit",
    "db:generate": "bun --bun prisma generate",
    "db:push": "bun --bun prisma db push",
    "db:migrate": "bun --bun prisma migrate dev",
    "db:migrate:prod": "bun --bun prisma migrate deploy",
    "db:studio": "bun --bun prisma studio",
    "db:seed": "bun --bun prisma db seed"
  },
  "prisma": {
    "seed": "bun run src/db/seed.ts"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.0.1",
    "@prisma/client": "^7.0.0",
    "@seedhunter/shared": "workspace:*",
    "graphql": "^16.12.0",
    "graphql-request": "^7.3.5",
    "hono": "^4.0.0",
    "jose": "^5.2.0",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/pg": "^8.15.6",
    "bun-types": "^1.0.0",
    "prisma": "^7.0.0",
    "typescript": "^5.4.0"
  }
}
