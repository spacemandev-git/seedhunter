{
  "name": "seedhunter",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "dev:backend": "bun run --filter @seedhunter/backend dev",
    "dev:player": "bun run --filter @seedhunter/player-webapp dev",
    "dev:admin": "bun run --filter @seedhunter/admin-app dev",
    "build": "bun run --filter '*' build",
    "build:backend": "bun run --filter @seedhunter/backend build",
    "build:player": "bun run --filter @seedhunter/player-webapp build",
    "build:admin": "bun run --filter @seedhunter/admin-app build",
    "cards:generate": "bun run --filter @seedhunter/card-assembler generate",
    "cards:all": "bun run --filter @seedhunter/card-assembler all",
    "typecheck": "bun run --filter '*' typecheck",
    "lint": "bun run --filter '*' lint",
    "clean": "rm -rf packages/*/node_modules packages/*/.svelte-kit packages/*/dist packages/*/build"
  },
  "devDependencies": {
    "bun-types": "^1.3.3",
    "typescript": "^5.3.3"
  }
}
